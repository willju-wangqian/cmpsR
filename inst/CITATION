  textVersion   = 
  paste("Ju and Hofmann (2021).", 
        "cmpsR: R Implementation of Congruent Matching Profile Segments Method.", 
        "R package version 0.1.2.", 
        "https://CRAN.R-project.org/package=cmpsR")
)
